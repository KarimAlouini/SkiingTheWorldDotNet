@model IEnumerable<domaine.entities.recharging_coupon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackOffice.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Generate New", "Generate")
</p>

<p>
    @Html.ValidationMessage("error");
</p>
<table class="table table-striped" id="dt">
    <tr>
        <th>
           Amount
        </th>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            Date generated
        </th>
        <th>
           Used
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateGenerated)
        </td>
        <td>
           @if (item.isUsed)
           {
               <button class="btn btn-success"><i class="fa fa-check-circle" aria-hidden="true"></i></button>
           }
           else
           {
            <button class="btn btn-danger">
                <i class="fa fa-times-circle-o" aria-hidden="true"></i></button>
                }
</td>
        <td>
           
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
   @section scripts
   {
       <script src="~/Content/dt/jquery.dataTables.js"></script>
       <script src="~/Content/dt/dataTables.bootstrap.min.js"></script>
       <script src="~/Content/dt/datatables.min.js"></script>
   }



<script>
    $(document).ready(function () {
        
        $('#dt').DataTable();
    });
</script>