<body>
    <!-- PRELOADER -->
    <div id="preloader"><img src="~/Content/images/preloader.gif" /></div>
    <!-- //PRELOADER -->
    <div class="preloader_hide">
        <!-- PAGE -->
        <div id="page">

            <!-- HEADER -->
            <header>

                <!-- TOP INFO -->
                <div class="top_info">

                    <!-- CONTAINER -->
                    <div class="container clearfix">
                        <ul class="secondary_menu">
                            
                           @if (u == null)
                           {

                               <li><a href="my-account.html">Register</a></li>
                               <li><a href="@Url.Action("Login", "User")">Login</a></li>
                           }
                           else
                           {
                            <li><a href="#">My account</a></li>
                           }


                           
                          
                        </ul>

                        @if(u != null){
                            <div id="bClick" class="live_chat"><a href="javascript:void(0);"><i class="fa fa-money"></i> <div class="phone_top"></div><p id="balance">@Html.Raw(u.balance)</p> </a></div>
                        }

                    @{
                        if (u != null)
                        {
                            <div class="phone_top">Hello @Html.Raw(u.login) </div>
                        }
                    }
                        
                    </div><!-- //CONTAINER -->
                </div><!-- TOP INFO -->
                <!-- MENU BLOCK -->
                <div class="menu_block">

                    <!-- CONTAINER -->
                    <div class="container clearfix">

                        <!-- LOGO -->
                        <div class="logo">
                            <a href="@Url.Action("Index","Home")"><img src="~/Content/images/skilogo.png" alt="" style="max-width: 83.1%;" /></a>
                        </div><!-- //LOGO -->
                        <!-- SEARCH FORM -->
                        <div class="top_search_form">
                            <a class="top_search_btn" href="javascript:void(0);"><i class="fa fa-search"></i></a>
                            <form method="get" action="#">
                                <input type="text" name="search" value="Search" onFocus="if (this.value == 'Search') this.value = '';" onBlur="if (this.value == '') this.value = 'Search';" />
                            </form>
                        </div><!-- SEARCH FORM -->
                        <!-- SHOPPING BAG -->
                        <div class="shopping_bag">
                            <a class="shopping_bag_btn" href="javascript:void(0);"><i class="fa fa-shopping-cart"></i><p>shopping bag</p><span id="cart">2</span></a>
                            <div id="cart_holder" class="cart">
                               
                            </div>
                        </div><!-- //SHOPPING BAG -->
                        
                        <!-- MENU -->
                        <ul class="navmenu center">
                            <li class="sub-menu  @if(this.ViewContext.RouteData.Values["controller"].ToString().Equals("Home")){
                                                          @Html.Raw("active");
                                                      }">
                                <a href="@Url.Action("Index","Home")">Home</a>

                            </li>
                            <li class="sub-menu @if(this.ViewContext.RouteData.Values["controller"].ToString().Equals("Shop")){
                                                    @Html.Raw("active");
                                                }">
                                <a href="@Url.Action("Index","Shop")">Shop</a>
                                
                            </li>

                            <li class="sub-menu">
                                <a href="javascript:void(0);">Forum</a>
                            </li>
                            <li class="sub-menu">
                                <a href="javascript:void(0);">Blog</a>
                                <!-- MEGA MENU -->
                                <ul class="mega_menu megamenu_col1 clearfix">
                                    <li class="col">
                                        <ol>
                                            <li><a href="blog.html">Blog</a></li>
                                            <li><a href="blog-post.html">Blog Post</a></li>
                                        </ol>
                                    </li>
                                </ul><!-- //MEGA MENU -->
                            </li>
                        
                            <li class="sub-menu first @if(this.ViewContext.RouteData.Values["controller"].ToString().Equals("Revendeur")){
                                @Html.Raw("active");
                                }">
                                <a href="@Url.Action("AllSellers","Revendeur")">our sellers</a>

                            </li>

                        </ul><!-- //MENU -->
                    </div><!-- //MENU BLOCK -->
                </div><!-- //CONTAINER -->
            </header><!-- //HEADER -->
            <!--BODY-->
            @RenderBody()

            <!-- FOOTER -->
            <footer style="padding-top: 0" >
                <!-- CONTAINER -->
                <div class="container clearfix">
                    <div class="foot_logo"><a href="index.html" ><img src="~/Content/images/foot_logo.png" alt="" /></a></div>
					
                    <div class="copyright_inf">
                        <span>SkiingTheWorld © 2017</span> |
                        <span>by CodeInc</span> |
                        <a class="back_top" href="javascript:void(0);" >Back to Top <i class="fa fa-angle-up"></i></a>
                    </div>
                </div><!-- //CONTAINER -->
            </footer><!-- //FOOTER -->
        </div><!-- //PAGE -->
    </div>
    <!-- TOVAR MODAL CONTENT -->
    <div id="modal-body" class="clearfix">
        <div id="tovar_content"></div>
        <div class="close_block"></div>
    </div><!-- TOVAR MODAL CONTENT -->
