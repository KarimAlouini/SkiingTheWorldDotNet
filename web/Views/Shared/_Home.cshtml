    <script src="~/Scripts/js/jquery.jcarousel.js" type="text/javascript"></script>
    <script src="~/Scripts/js/fancySelect.js"></script>
    <script src="~/Scripts/js/animate.js" type="text/javascript"></script>
    <script src="~/Scripts/js/myscript.js" type="text/javascript"></script>
<script>
    if (top != self) top.location.replace(self.location.href);
</script>

<script>
    $(document).ready(function() {
        $('#bClick').on('click',
            function () {
                $('#payModal').modal('toggle');
            });


       
    });

    function getCartItemsCount() {
        console.log('count');
        $.ajax({
            url: '@Url.Action("Count","Cart")',
            
            type: 'GET',
            success: function (data) {
                console.log(data);
                $('#cart').html(data);
            }
        });

       
    }

    function renderCart() {
        console.log('render');
        $('#cart_holder').load('@Url.Action("Content","Cart")');
    }

  

    getCartItemsCount();
    renderCart();
    
    
</script>
    
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
@RenderSection("scripts",required:false)
    
    
    
    
