
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Home.cshtml";
}

@section css{
  
}

<section class="my_account parallax">
			
    <!-- CONTAINER -->
    <div class="container">
				
        <div class="my_account_block clearfix">
            <div class="login">
                <h2>I'M ALREADY REGISTERED</h2>
                @if (Request.QueryString["message"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <strong>Authentication problem </strong>@Request.QueryString["message"]
                    </div>
                }
                <form class="login_form" action="@Url.Action("Login","User")" method="post">
                    <input type="text" name="login" value="Username or email" onFocus="if (this.value == 'Username or email') this.value = '';" onBlur="if (this.value == '') this.value = 'Username or email';" />
                    <input placeholder="Password" class="last" type="password" name="password" value="" onFocus="if (this.value == 'Password') this.value = '';" onBlur="if (this.value == '') this.value = 'Password';" />
                    <div class="clearfix">
                      
                        <div class="pull-right"><a class="forgot_pass" href="javascript:void(0);" >Forgot password?</a></div>
                    </div>
                    <div class="center"><input type="submit" value="Login"></div>
                </form>
            </div>
           
        </div>
				
        <div class="my_account_note center">HAVE A QUESTION? <b>1 800 888 02828</b></div>
    </div><!-- //CONTAINER -->
</section><!-- //MY ACCOUNT PAGE -->

