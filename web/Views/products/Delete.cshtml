@model domaine.entities.product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_BackOffice.cshtml";
}


@section title
{
    PRODUCTS
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="back-to-list">
        @Html.ActionLink("Back to List", "Index") 
    </div>
    <br />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Marque
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Marque)
        </dd>

        <dt>
            Modele
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Modele)
        </dd>

        <dt>
            Sub Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sousCategorieProd.Libelle)
        </dd>

        <dt>
            Color
        </dt>

        <dd>
            <i  class="fa fa-square" style="font-size: 22px;color: @Html.DisplayFor(model => model.Color)"></i>
        </dd>

        <dt>
            Size
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Photo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Photo)
        </dd>

        <dt>
            Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
        </div>
    }
</div>
